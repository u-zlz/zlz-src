<!--pages/index/index.wxml-->
<view>
  <!--轮播图--> 
  <swiper class="Swiper" 
  autoplay 
  circular="true"
  indicator-dots 
  indicator-color='ivory'
  indicator-active-color='#ADEAEA' 
  vertical="true"
  snap-to-edge='1'> 
  <swiper-item wx:for="{{bannerdata}}" wx:key="key">
    <image src='{{item.pic}}'></image>
    </swiper-item>
  </swiper>
  <!-- 搜索-->
 
  <!-- 导航区域 -->
    <view class="navContainer">
      <view class="navitem">
        <text class="iconfont icon-icon-"></text>
        <text>每日推荐</text>
      </view>
      <view class="navitem">
        <text class="iconfont icon-zhibo"></text>
        <text>歌单</text>
      </view>
      <view class="navitem">
        <text class="iconfont  icon-diantai"></text>
        <text>最新排行榜</text>
      </view>
      <view class="navitem">
        <text class="iconfont icon-paihangbang"></text>
        <text>电台</text>
      </view>
      <view class="navitem">
        <text class="iconfont icon-paihangbang"></text>
        <text>直播</text>
      </view>
   </view>
  <!--推荐歌曲区域-->
    <view class="Music-Container">
      <navherder title="推荐歌曲" nav="为您精心推荐"></navherder>
          <!-- 推荐歌曲-小图-->
      <view>
          <!-- 此处要添加 enable-flex 会把flax布局 flex container -->
           <scroll-view class="Music-Socall"     enable-flex	 scroll-x enhanced show-scrollbar='false'>
              <view class="Music-item" wx:for="{{reacmendata}}" wx:key="id" wx:for-item="reacmendit">
                <image  src="{{reacmendit.picUrl}}"></image>
                <text>{{reacmendit.name}}</text>
              </view>
           </scroll-view>
      </view>
  </view>
  <!--排行榜区域-->
  <view class="Music-Top">
      <!--头部-->
    <view>
      <navherder title="排行榜" nav="热歌风向标"></navherder>
    </view>
    <!-- 内容 -->
    <view>
     
    </view>
  </view>
</view>