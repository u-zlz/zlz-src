/* pages/index/index.wxss */
/* 轮播图 */
.Swiper{
  width: 100%;
  height:400rpx;
}
.Swiper image{
  width: 100%;
  height:100%;
}
/*导航区域*/
.navContainer{
  display:flex;
}
.navitem{
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 20%;
  font-size:30rpx;
}
.iconfont{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  font-size:50rpx ;
  color: #fff;
  margin: 20rpx 0rpx;
  text-align: center;
  line-height: 100rpx;
  background-color:skyblue;
}
/*推荐歌曲*/
.Music-Container{
  padding: 20rpx;
  font-size:30rpx;
}
.Music-Container .Music-header .Music-title{
  line-height:50rpx;
  color: #666;
}
.Music-Container .Music-header .Music-title-right{
  float:right;
  font-size:20rpx;
  border: 1px #333 solid;
  padding:10rpx 20rpx;
  border-radius: 30rpx;
}
/*推荐内容区*/
.Music-Socall{
  display:flex;
  height:300rpx;
}
.Music-item{
  margin: 20rpx;
  height:50rpx;
  width: 200rpx;
}
.Music-item image{
  width: 200rpx;
  height: 200rpx;
  border-radius:10rpx;
}
.Music-item text{
  /* 多行文本溢出*/
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;/*设置对其模式*/
  -webkit-line-clamp:2;
}
.Music-Top{
  padding: 20rpx;
  font-size: 30rpx;
}


